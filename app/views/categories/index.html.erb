<div class="container-fluid">
  <p id="notice"><%= notice %></p>

  <h1>Categorias</h1>

  <hr>
  <table class="table">
    <thead>
    <tr>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.description %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Exibir', category, :class => "btn btn-primary" %></button>
            <%= link_to 'Editar', edit_category_path(category), :class => "btn btn-primary" %>
            <%= link_to 'Excluir', category, :class => "btn btn-primary", method: :delete, data: {confirm: 'Are you sure?'} %></button>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

<hr>
<%= link_to 'Nova Categoria', new_category_path, :class => "btn btn-primary" %>
